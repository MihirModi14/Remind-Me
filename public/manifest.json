{
  "manifest_version": 3,
  "name": "Remind Me",
  "description": "Get timely reminders for your tasks and meetings with this extension.",
  "version": "1.0.0",
  "icons": {
    "128": "./assets/logo.png"
  },
  "action": {
    "default_icon": "./assets/logo.png",
    "default_popup": "index.html",
    "matches": [
      "<all_urls>"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "alarms",
    "storage",
    "notifications"
  ],
  "oauth2": {
    "client_id": "686032428033-oitbnf1gnsm85ngm0j9gvdkfjnpq4aaj.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  }
}